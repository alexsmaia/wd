{
    "openapi": "3.0.3",
    "info": {
        "title": "Watch & Do API",
        "description": "Watch & Do API",
        "contact": {
            "name": "Alexandre Maia",
            "url": "http://wwwalexandremaia.pt",
            "email": "info@alexandremaia.pt"
        },
        "version": "1.0"
    },
    "produces": ["application/json"],
    "schemes": ["http", "https"],
    "components": {
        "schemas":{
            "User": {
                "type": "object",
                "required": ["id", "username", "password", "email", "role_id"],
                "properties": {
                    "id": { "type": "integer", "format": "int32" },
                    "username": { "type": "string" }, 
                    "password": { "type": "string" },
                    "email": { "type": "string" },
                    "role_id": { "type": "integer", "format": "int32" },
                    "createdAt": { "type": "string", "format": "date-time" },
                    "updatedAt": { "type": "string", "format": "date-time" }
                }
            }
        }
    }, 
    "paths": {
        "/users": {
            "get": {
                "tags": ["Users"],
                "description": "Get Users List",
                "responses": {
                    "200": {
                        "description": "Users List",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#components/schemas/User"
                                },
                                "examples": {
                                    "User List": [
                                        {
                                            "id": "1",
                                            "name": "Daniel",
                                            "email": "daniel@mail.pt",
                                            "role_id": "1"
                                        },
                                        {
                                            "id": "2",
                                            "name": "Joaquim",
                                            "email": "joaquim@mail.pt",
                                            "role_id": "1"
                                        }
                                    ]
                                }
                            },
                            "text/plain": {
                                "schema": {
                                    "type": "string"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Error",
                        "content": {
                            "text/plain": {
                                "schema": {
                                    "type": "string"
                                },
                                "examples": {
                                    "Error": {
                                        "value": "Error"
                                    }
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Error",
                        "content": {
                            "text/plain": {
                                "schema": {
                                    "type": "string"
                                },
                                "examples": {
                                    "Unauthorized": {
                                        "value": "Invalid Token"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/register": {
            "post": {
                "description": "Register",
                "tags": ["Auth"],
                "requestBody": {
                    "content": {
                        "application/json" : {
                            "schema": {
                                "$ref": "#components/schemas/User"
                            },
                            "examples": {
                                "User": {
                                    "value": {
                                        "username":"admin", 
                                        "email":"admin@mail.pt", 
                                        "password": "12345678"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "text/plain": {
                                "schema": {
                                    "type": "string"
                                }
                            },
                            "examples": {
                                "Success": {
                                    "value": "User Created"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Error",
                        "content": {
                            "text/plain": {
                                "schema": {
                                    "type": "string"
                                },
                                "examples": {
                                    "Error": {
                                        "value": "Error"
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Error",
                        "content": {
                            "text/plain": {
                                "schema": {
                                    "type": "string"
                                },
                                "examples": {
                                    "Error": {
                                        "value": "Error"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}
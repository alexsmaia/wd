    "produces": ["application/json"],
    "schemes": ["http", "https"],
    "components": {
        "schemas":{
            "Topic": {
                "type": "object",
                "required": ["topic", "desciption", "color"],
                "properties": {
                    "id": { "type": "integer", "format": "int32" },
                    "topic": { "type": "string" }, 
                    "desciption": { "type": "string" },
                    "color": { "type": "string" },
                    "status": { "type": "boolean", "default": "1" },
                    "createdAt": { "type": "string", "format": "date-time" },
                    "updatedAt": { "type": "string", "format": "date-time" }
                }
            },
            "User": {
                "type": "object",
                "required": ["username", "password", "email", "role_id"],
                "properties": {
                    "id": { "type": "integer", "format": "int32" },
                    "username": { "type": "string" }, 
                    "password": { "type": "string" },
                    "email": { "type": "string" },
                    "status": { "type": "boolean", "default": "1" },
                    "role_id": { "type": "integer", "format": "int32", "default": "1" },
                    "createdAt": { "type": "string", "format": "date-time" },
                    "updatedAt": { "type": "string", "format": "date-time" }
                }
            }
        },
        "securitySchemes": {
            "bearer": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        }
    }, 
    "paths": {
        "/login": {
            "post": {
                "description": "Login",
                "tags": ["Auth"],
                "requestBody": {
                    "content": {
                        "application/json" : {
                            "schema": {
                                "$ref": "#components/schemas/User"
                            },
                            "examples": {
                                "Registered": {
                                    "value": {
                                        "username":"registered", 
                                        "password": "12345678"
                                    }
                                },
                                "Admin": {
                                    "value": {
                                        "username":"admin", 
                                        "password": "12345678"
                                    }
                                },
                                "Super Admin": {
                                    "value": {
                                        "username":"supadmin", 
                                        "password": "0123456789"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Token",
                        "content": {
                            "text/plain": {
                                "schema": {
                                    "type": "string"
                                },
                                "examples": {
                                    "Sucess": {
                                        "value": "Bearer Token"
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Error",
